<%- include('partials/header') %>

  <div class="jumbotron text-center">
    <div class="container">
      <i class="fas fa-address-book fa-6x"></i>
      <h1 class="display-3">Phone Book</h1>
  
      <p class="phone-text">Name : <%= name %></p>
      <hr>
      <p class="phone-text">Mobile No : <%= mobileNumber %></p>
      <hr>
      <hr>
      <p class="phone-text">Email Address : <%= email %></p>
      <hr>

      <% if (locals.name && locals.mobileNumber &&  locals.email != null ) { %>
      <a class="btn btn-dark" href="/create" role="button">Update Phone Book</a>
      <% } else { %>
        <a class="btn btn-dark" href="/create" role="button">Create Phone Book</a>
      <% }  %>
      <a class="btn btn-dark" href="/delete" role="button">Delete</a>
      <a class="btn btn-dark" href="/logout" role="button">Logout</a>
      
    </div>
  </div>

  <%- include('partials/footer') %>